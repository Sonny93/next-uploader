datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id Int @id @default(autoincrement())
  user_id String @default(uuid())
  username String
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model file {
  id Int @id @default(autoincrement())
  file_id String @unique @default(uuid())

  name String
  password String
  passwordSet Boolean
  
  fileBrutSize BigInt
  fileSaveAs String @unique
  fileExtension String
  fileMimeType String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model log_http {
  id Int @id @default(autoincrement())

  url String
  method String
  ip String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model log_connection {
  id Int @id @default(autoincrement())

  email_used String
  ip String
  success Boolean
  message String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

